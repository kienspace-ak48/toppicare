    <!-- JS -->
    <script>
      let collapsed = false;

      function toggleSidebar() {
        const sidebar = document.getElementById("sidebar");
        collapsed = !collapsed;

        sidebar.classList.toggle("w-64");
        sidebar.classList.toggle("w-20");

        document
          .querySelectorAll(".label, #logoText, #userInfo")
          .forEach((el) => el.classList.toggle("hidden"));

        // ðŸ”¥ ÄÃ³ng táº¥t cáº£ submenu khi collapse
        document.querySelectorAll('[id$="Sub"]').forEach((sub) => {
          sub.classList.add("hidden");
        });

        document.querySelectorAll(".chevron").forEach((c) => {
          c.classList.remove("rotate-180");
          // alert('a')
          console.log(c);
          c.classList.toggle("hidden", collapsed);
          c.style.display = collapsed ? "none" : "inline-block";
        });
      }
      //
      document.querySelectorAll("a").forEach((link) => {
        if (link.href === window.location.href) {
          link.classList.add("bg-blue-100", "text-blue-600");
          const parentSub = link.closest('[id$="Sub"]');
          if (parentSub) parentSub.classList.remove("hidden");
          //
          const btn = parentSub.previousElementSibling;
          if(!btn || !btn.classList.contains("btn_root")) return;
          //rotate
          const chevron = btn.querySelector('.chevron');
          chevron?.classList.add('rotate-180')
        }
      });

      function toggleSubmenu(id, btn) {
        if (collapsed) return; // â— giá»‘ng React: collapse thÃ¬ khÃ´ng má»Ÿ submenu

        const submenu = document.getElementById(id);
        submenu.classList.toggle("hidden");

        const chevron = btn.querySelector(".chevron");
        chevron.classList.toggle("rotate-180");
      }
      document
        .querySelector("#toggleDarkMode")
        .addEventListener("click", () => {
          console.log("click");
          document.documentElement.classList.toggle("dark");
        });
    </script>
